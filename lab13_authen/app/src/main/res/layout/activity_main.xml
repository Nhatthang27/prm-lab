<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:contentDescription="Application Logo"
        app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác thực"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSignInEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignInEmail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:background="#2563EB"
        android:text="Đăng nhập - Email"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUpEmail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="#16A34A"
        android:text="Đăng ký - Email"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInEmail"
        app:layout_constraintStart_toStartOf="@+id/btnSignInEmail"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInEmail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignInPhone"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#9333EA"
        android:text="Đăng nhập - SĐT"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUpEmail"
        app:layout_constraintStart_toStartOf="@+id/btnSignUpEmail"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUpEmail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUpPhone"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="#F59E0B"
        android:text="Đăng ký - SĐT"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInPhone"
        app:layout_constraintStart_toStartOf="@+id/btnSignInPhone"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>